    <script>
        async function previewAndSubmit(event) {
            spiner.style.visibility = "visible"
            const fileInput = event.target;
            const file = fileInput.files[0];
            const preview = document.getElementById('imagePreview');
            const loadingSpinner = document.querySelector('.loader');
            const errorMsg = document.querySelector('.e_flassmsg');
            const seggMsg = document.querySelector('.s_flassmsg');

            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    if (preview) {
                        preview.src = e.target.result;
                    }
                };
                reader.readAsDataURL(file);

                const formData = new FormData();
                formData.append('profileImg', file);

                try {
                    if (loadingSpinner) loadingSpinner.style.display = 'block';

                    const response = await fetch(document.getElementById('profileForm').action, {
                        method: 'PUT',
                        body: formData,
                    });

                    const result = await response.json();

                    if (response.ok) {
                        if (seggMsg) seggMsg.textContent = result.message;
                    } else {
                        if (errorMsg) errorMsg.textContent = result.message;
                    }
                } catch (error) {
                    if (errorMsg) errorMsg.textContent = "An error occurred. Please try again.";
                } finally {
                    spiner.style.visibility = "hidden"
                    
                }
            }
        }

            const currentPath = window.location.pathname;
                                                                                                                                const pathname = {
                                                                                                                                    '/profile/edit': 'editprofile',
                                                                                                                                    '/': 'Home',
                                                                                                                                    '/user/login': 'Login',
                                                                                                                                    '/profile': 'Profile',
                                                                                                                                    '/user/signup': 'Signup',
                                                                                                                                    '/account': 'Account',
                                                                                                                                };

                                                                                                                                if (pathname[currentPath]) {
                                                                                                                                    const titleElement = document.querySelector('.title');
                                                                                                                                    if (titleElement) {
                                                                                                                                        titleElement.innerText = pathname[currentPath];
                                                                                                                                    }
            }

            let navItem;
            if (["/", "/account/promotion", "/account", "/profile"].includes(currentPath)) {
                navItem = document.querySelector(`.nav-item a[href="${currentPath}"]`)?.parentElement;
            } else {
            navItem = document.querySelector(`.nav-item a[href="${currentPath}"]`)?.closest('.nav-item');
            }

                                                                                                                                if (navItem) {
                                                                                                                                    navItem.classList.add('active');
                                                                                                                                }
                                                                                                                            </script>


